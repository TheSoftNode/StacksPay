# Database
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
DATABASE_NAME=sbtc_payment_gateway

# JWT Configuration
JWT_SECRET=<generate-a-secure-random-string>
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=<generate-a-secure-random-string>
JWT_REFRESH_EXPIRES_IN=7d

# Webhook Configuration
WEBHOOK_SECRET=<generate-a-secure-random-string>
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3

# Server Configuration
PORT=4000
NODE_ENV=development
API_VERSION=v1

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
TRUST_PROXY=false
ENCRYPTION_KEY=<generate-a-32-char-encryption-key>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Stacks Configuration
STACKS_NETWORK=testnet
STACKS_API_URL=https://api.testnet.hiro.so

# Bitcoin Configuration
BITCOIN_NETWORK=testnet

# sBTC Configuration
SBTC_NETWORK=testnet
SBTC_API_URL=https://devenv.sbtc.tech
SBTC_CONTRACT_ADDRESS=SM3VDXK3WZZSA84XXFKAFAF15NNZX32CTSG82JFQ4.sbtc-token
SBTC_SIGNER_API_URL=https://signer.sbtc.tech

# Bitcoin API Configuration
BITCOIN_API_URL=https://mempool.space/testnet/api

# Circle API (for USD/USDC conversion)
